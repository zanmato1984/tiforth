{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "base-debug",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "bundled-arrow",
      "hidden": true,
      "cacheVariables": {
        "TIFORTH_ARROW_PROVIDER": "bundled"
      }
    },
    {
      "name": "tests-on",
      "hidden": true,
      "cacheVariables": {
        "TIFORTH_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": [
        "base-debug",
        "bundled-arrow",
        "tests-on"
      ],
      "displayName": "TiForth: Debug build with bundled Arrow and tests enabled"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build TiForth debug (and tests)",
      "configurePreset": "debug"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "displayName": "Run TiForth tests (debug)",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
